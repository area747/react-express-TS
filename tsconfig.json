{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "es5",
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "outDir": "./server/dist",
    "typeRoots": [
      "./node_modules/@types",
      "./server/src/@types",
      "./@types",
    ],
    "isolatedModules": true,
    //"noEmit": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/src/**/*.ts"
    //"./src/**/*"
  ]
}